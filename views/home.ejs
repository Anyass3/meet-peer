<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Meeet</title>
    <link rel="stylesheet" href="/global.css">
    <script  src="https://cdn.jsdelivr.net/npm/abquery@0.3.4/dist/index.min.js"></script>
    <script>
        $(()=>{
            $('#join-code').debounce('input',(ev)=>{
                if($('#join-code').val.length===36){
                const a=$.new('a')
                a.$$.href=window.location.origin+'/room/'+$('#join-code').val
                $('#join-room').rmAttr('disabled').click(()=>{
                    a.$$.click()
                })
            }
            })
            
        })
    </script>
</head>
<body style="display: flex;flex-direction:column;justify-content:space-around">
    <h1>Welcome to meet-peer</h1>
    <div style="margin: auto;">
        <button style="margin-bottom: 5%;">
            <a href="/new-room" style="font-size: 20px;">create new room</a>
        </button>
        <p>OR</p>
        <div style="margin-top:5%">
           <input id="join-code" type="text"> <button disabled id="join-room" to="/room">join with code</button>
        </div>
    </div>
</body>
</html>