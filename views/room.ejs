<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Meeet Room</title>
    <link rel="stylesheet" href="/global.css">
    <script defer src="/socket.io/socket.io.js"></script>
    <!-- <script src="https://cdn.jsdelivr.net/npm/simple-peer/simplepeer.min.js"></script> -->
    <script defer src="/simplepeer.min.js"></script>
    <!-- <script  src="https://cdn.jsdelivr.net/npm/abquery@0.3.4/dist/index.min.js"></script> -->
    <script src="/abquery.js"></script>
    <style>
        body {
            background-color: aliceblue;
        }

        video {
            width: 300px;
            height: 300px;
            object-fit: cover;
            border-radius: 9px 9px 0px 0px;
            background: black;
        }

        #grid div {
            padding-bottom: 10px;
            position: relative;
        }

        #grid {
            display: flex;
            justify-content: space-evenly;
            flex-wrap: wrap;
        }

        #grid div div button:active {
            transform: scale(0.9)
        }

        #grid div div button {
            outline: none;
            border: none;
            background-color: lightcoral;
        }

        #grid div div button.enable,
        #joinMeet {
            background-color: lightgreen;
        }

        .item {
            width: 100%;
            display: flex;
            justify-content: center;
            position: absolute;
            bottom: 3px;
        }

        .item p {
            background-color: #e3f2fd;
            color: #000;
            margin: auto;
            padding: 10px;
            width: 100%;
            text-align: center;
        }

        #grid div div#joinMeet {
            display: flex;
            justify-content: center;
            width: 100%;
            top: 0;
            position: absolute;
        }

        #leave {
            margin: auto;
            border-radius: 10px;
            background-color: #ffebbe;
            color: #d50000;
        }

        .d-none {
            display: none
        }
    </style>

    <script src="/script.js" defer></script>

    <script defer>
        const roomID = "<%= roomID %>"
        // console.log(roomID)

        $(() => {
            $('#inputcopy')
                .css({ width: '75%', border: 'none', outline: 'none' })
                .val = window.location.href

            $('#copyer').click(() => {
                $('#inputcopy').$$.select();
                $().$$.execCommand("copy");
                $('#copyer').css('background', "lightgreen").text = 'copied'
                setTimeout(() => $('#copyer').css('background', "").text = 'copy link', 1000)
            });
        })
    </script>
</head>

<body>
    <div style="display:flex;justify-content: center;">
        <h1 style="text-align: center;">Peer Meet Room</h1>
        <div>
            <button id="leave" class="d-none">leave Meet</button>
            <p style="color:red" class="d-none">reconnecting...</p>
        </div>
    </div>

    <!-- <button id="join">join camera and audio</button> -->
    <main id="grid">
        <div style="margin-bottom: 0px">
            <video autoplay playsInline></video>
            <div class="item" style="bottom: 35px;">
                <button id="toggleCamera">video</button>
                <button id="toggleAudio">audio</button>
            </div>
            <div class="item" style="margin-top: -47px;">
                <input id="p-name-input" type="text" placeholder="enter name">
                <p id="p-name" class="d-none">Anonymous</p>
            </div>
        </div>
        <div>
            <button id="joinMeet" style="margin: 20px;">
                Enter Meet Now
            </button>
        </div>
    </main>

    <div style="margin-top:20px;display:flex;justify-content:center">
        <input id="inputcopy">
        <button id="copyer">copy link</button>
    </div>

</body>

</html>